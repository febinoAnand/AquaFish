<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="1.44"
        >
        <TextView
            android:id="@+id/bill_view_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/name"/>

        <TextView
            android:id="@+id/bill_view_dash_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_toRightOf="@id/bill_view_name_textview"
            android:textStyle="bold"
            android:text=" - "/>

        <TextView
            android:id="@+id/bill_view_trader_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/bill_view_name_textview"
            android:layout_toRightOf="@id/bill_view_dash_textview"
            android:text="@string/trader"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/bill_main_billno_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:text="@string/bill_no"/>
            <EditText
                android:id="@+id/bill_view_billno_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:nextFocusDown="@+id/bill_main_date_edit"
                android:focusable="false"
                android:inputType="text"
                android:paddingTop="0dp"
                android:textSize="15sp"
                android:layout_below="@+id/bill_main_billno_textview"
                android:hint="@string/enter_bill_no"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/bill_main_date_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:text="@string/bill_date"/>
            <EditText
                android:id="@+id/bill_view_date_edit"
                android:importantForAutofill="no"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:focusable="false"
                android:textSize="15sp"
                android:layout_below="@+id/bill_main_date_textview"
                android:hint="@string/enter_date"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/date"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/breed"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/box"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.15"
            android:textSize="12sp"
            android:gravity="right"
            android:textColor="@color/white"
            android:text="@string/kg"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1.1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/rate"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/amount"
            />

    </LinearLayout>
    <ListView
        android:id="@+id/bill_view_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_weight="1"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="@color/white"
            android:text="@string/bill_amount"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:text="@string/zero"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"

            />
        <TextView
            android:id="@+id/bill_view_bill_amount_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/zerodot"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bill_generate_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/date"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="@color/white"
            android:text="@string/balance"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/zero"
            android:visibility="invisible"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/kg"
            />
        <TextView
            android:id="@+id/bill_view_balance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/zerodot"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bill_generate_old_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/date"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="@color/white"
            android:text="@string/old_balance"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/box"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/kg"
            />
        <TextView
            android:id="@+id/bill_view_old_balance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/zerodot"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/date"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="@color/white"
            android:text="@string/total"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/box"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/kg"
            />
        <TextView
            android:id="@+id/bill_view_total_amount_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/zerodot"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_weight="1.3">

        <Button
            android:id="@+id/bill_view_print_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/print"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:background="@drawable/ok_btn_bg"/>


        <Button
            android:id="@+id/bill_view_share_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:background="@drawable/ok_btn_bg"/>

        <Button
            android:id="@+id/bill_view_view_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:background="@drawable/cancel_btn_bg"/>

    </LinearLayout>


</LinearLayout>