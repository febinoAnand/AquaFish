<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bill_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".15"
        android:background="@color/grey"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1.36"
            >

            <TextView
                android:id="@+id/spf_tank_fish_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/spf_tank"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sale_item_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spf_tank_fish_head"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:text="@string/sale_items"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sale_item_head"
                android:layout_centerInParent="true"
                android:text="@string/phone_number"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1.54"
            >
            <TextView
                android:id="@+id/bill_view_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/name"/>

            <TextView
                android:id="@+id/bill_view_dash_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_toRightOf="@id/bill_view_name_textview"
                android:textStyle="bold"
                android:text=" - "/>

            <TextView
                android:id="@+id/bill_view_trader_id_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/bill_view_name_textview"
                android:layout_toRightOf="@id/bill_view_dash_textview"
                android:text="@string/trader"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1.54"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1.4">
                <TextView
                    android:id="@+id/bill_main_billno_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/bill_no"/>
                <TextView
                    android:id="@+id/bill_no_semi_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/bill_main_billno_textview"
                    android:text=":"/>

                <TextView
                    android:id="@+id/bill_view_billno_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bill_no_semi_colon"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="001"/>
                <EditText
                    android:id="@+id/bill_view_billno_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:visibility="gone"
                    android:nextFocusDown="@+id/bill_main_date_edit"
                    android:focusable="false"
                    android:inputType="text"
                    android:paddingTop="0dp"
                    android:textSize="15sp"
                    android:layout_below="@+id/bill_main_billno_textview"
                    android:hint="@string/enter_bill_no"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/bill_main_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:text="@string/bill_date"/>
                <TextView
                    android:id="@+id/bill_date_semi_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/bill_main_date_textview"
                    android:text=":"/>

                <TextView
                    android:id="@+id/bill_view_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bill_date_semi_colon"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="001"/>
                <EditText
                    android:id="@+id/bill_view_date_edit"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:focusable="false"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:layout_below="@+id/bill_main_date_textview"
                    android:hint="@string/enter_date"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.55"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/date"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/breed"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/box"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.15"
                android:textSize="12sp"
                android:gravity="right"
                android:textColor="@color/white"
                android:text="@string/kg"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1.1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/rate"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/amount"
                />

        </LinearLayout>
        <ListView
            android:id="@+id/bill_view_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight=".9"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.55"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="left"
                android:textColor="@color/white"
                android:text="@string/bill_amount"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:text="@string/zero"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"

                />
            <TextView
                android:id="@+id/bill_view_bill_amount_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/zerodot"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bill_generate_balance_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.55"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/date"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="left"
                android:textColor="@color/white"
                android:text="@string/balance"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/zero"
                android:visibility="invisible"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/kg"
                />
            <TextView
                android:id="@+id/bill_view_balance_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/zerodot"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.55"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="left"
                android:textColor="@color/colorPrimary"
                android:text="@string/bill_balance"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/zero"
                android:visibility="invisible"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/kg"
                />
            <TextView
                android:id="@+id/bill_view_bill_balance_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/zerodot"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bill_generate_old_balance_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.55"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/date"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="left"
                android:textColor="@color/white"
                android:text="@string/old_balance"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/box"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/kg"
                />
            <TextView
                android:id="@+id/bill_view_old_balance_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/zerodot"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1.55"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/date"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="left"
                android:textColor="@color/white"
                android:text="@string/total"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/box"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/kg"
                />
            <TextView
                android:id="@+id/bill_view_total_amount_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/zerodot"
                />

        </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_weight="1.3">

        <Button
            android:id="@+id/bill_view_print_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/print"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:background="@drawable/ok_btn_bg"/>


        <Button
            android:id="@+id/bill_view_share_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:background="@drawable/ok_btn_bg"/>

        <Button
            android:id="@+id/bill_view_back_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:background="@drawable/cancel_btn_bg"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1.2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/bill_view_back_img_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/baseline_arrow_back_30"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/bill_view_print_img_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/baseline_print_30"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/bill_view_share_img_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/baseline_share_30"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/bill_view_edit_img_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/baseline_edit_30"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>