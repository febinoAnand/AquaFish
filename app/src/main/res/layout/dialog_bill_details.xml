<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        android:layout_weight="1">
        <TextView
            android:id="@+id/bill_header_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="@string/edit_order"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <TextView
                android:id="@+id/bill_amount_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="@string/zero"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:layout_centerHorizontal="true"
                android:paddingTop="0dp"
                android:textSize="12sp"
                android:layout_below="@+id/bill_amount_textview"
                android:hint="@string/total_amount"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <TextView
                android:id="@+id/bill_breed_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:text="@string/breed"/>
            <EditText
                android:id="@+id/bill_item_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:nextFocusDown="@+id/bill_box_edit"
                android:inputType="text"
                android:paddingTop="0dp"
                android:textSize="12sp"
                android:layout_below="@+id/bill_breed_textview"
                android:hint="@string/select_item_input"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/bill_box_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:text="@string/total_box"/>
                <EditText
                    android:id="@+id/bill_box_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:nextFocusDown="@+id/bill_kgs_edit"
                    android:inputType="text"
                    android:paddingTop="0dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/bill_box_textview"
                    android:hint="@string/enter_box"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/bill_kgs_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:text="@string/total_kg"/>
                <EditText
                    android:id="@+id/bill_kgs_edit"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:nextFocusDown="@+id/bill_rate_edit"
                    android:textSize="12sp"
                    android:layout_below="@+id/bill_kgs_textview"
                    android:hint="@string/enter_kgs"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/bill_rate_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:text="@string/rate"/>
                <EditText
                    android:id="@+id/bill_rate_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:nextFocusDown="@+id/bill_date_edit"
                    android:inputType="text"
                    android:paddingTop="0dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/bill_rate_textview"
                    android:hint="@string/enter_rate"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/bill_date_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:text="@string/date"/>
                <EditText
                    android:id="@+id/bill_date_edit"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/bill_date_textview"
                    android:hint="@string/enter_date"/>
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bill_dialog_ok_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/cancel_btn_bg"
                android:textColor="@color/colorPrimary"
                android:paddingBottom="10dp"
                android:layout_marginRight="10dp"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/cancel_btn_text"/>
            <Button
                android:id="@+id/bill_dialog_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ok_btn_bg"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                android:text="@string/ok_btn_text"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>