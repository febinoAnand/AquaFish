<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:paddingBottom="15dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/bill_list_calender_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_left_30"
            android:background="@drawable/roundcorner"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/bill_list_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:inputType="text"
            android:background="@drawable/search_bg"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight=".3"/>
        <ImageButton
            android:id="@+id/bill_list_calender_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_right_30"
            android:background="@drawable/roundcorner"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/bill_list_billcount_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/zero"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textSize="20sp"
        />
            <TextView
                android:id="@+id/bill_list_amount_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:textSize="20sp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/total_bill"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/total_amount"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/date"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/bill_no"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/name"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1.2"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/amount"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.4"
            android:textSize="12sp"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <ListView
        android:id="@+id/bill_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </LinearLayout>






</LinearLayout>